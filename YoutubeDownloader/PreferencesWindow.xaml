<Window x:Class="YoutubeDownloader.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Preferences" Height="260" Width="300">
    <Grid>
        <xctk:WatermarkTextBox x:Name="FilePath_Box" Watermark="Enter default file path here" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="39" Margin="29,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" ToolTip="Where files are saved" TextChanged="FilePath_Box_TextChanged"/>
        <Label Content="Default file path" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="59,21,0,0" VerticalAlignment="Top" Width="176" FontWeight="Bold"/>
        <Label Content="Use default file name" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="59,109,0,0" VerticalAlignment="Top" Width="176" FontWeight="Bold"/>
        <CheckBox x:Name="DefaultFileName_ChkBox" Content="Yes" HorizontalAlignment="Left" Margin="129,140,0,0" VerticalAlignment="Top" ToolTip="Use video title as file name" Checked="DefaultFileName_ChkBox_Checked" IsChecked="True"/>
        <Button x:Name="Cancel_Btn" Content="Cancel" HorizontalAlignment="Left" Margin="160,173,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Btn_Click"/>
        <Button x:Name="SavePreferences_Btn" Content="Save" HorizontalAlignment="Left" Margin="59,173,0,0" VerticalAlignment="Top" Width="75" Click="SavePreferences_Btn_Click"/>
    </Grid>
</Window>
